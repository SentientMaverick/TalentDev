
@model TalentAcquisition.BusinessLogic.UpdatedDomain.LeaveManage

@{
    ViewBag.Title = "Leave";
    Layout = "~/Views/Shared/_NormalLayout.cshtml";
}

<script src="~/ckeditor/ckeditor.js">
</script>
<script src="~/ckeditor/adapters/jquery.js"></script>
<p>Leave Plan</p>
<ol class="breadcrumb">
    <li><a href="@Url.Action("Dashboard","Admin")">Home</a></li>
    @*<li><a href="#">Private</a></li>*@
    @*<li><a href="#">Pictures</a></li>*@
    <li class="active">Leave Plan</li>
</ol>
<section class="container body-content">
    @*<span>@ViewBag.Message</span>*@
    <div class="row">
        @*<a href="@Url.Action("requisition/create","Admin")" id="reqjob" class="btn"><img src="~/Assets/Icons/File-Plus.png" width="20" />Create Requisition</a>
            <span class="glyphicon glyphicon-search"></span> <input class="form-control input-sm" id="myInput" type="text" placeholder="filter requisition entries.." style="display:inline-block;outline:none" />*@
    </div>
    <div class="row">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="panel-title">
                    <a data-toggle="collapse" href="#collapse5">Personal Leave Plan Management</a>
                </div>
            </div>
            <div id="collapse5" class="panel-collapse collapse">
                <div class="panel-body">
                    <ul>
                        <li>@Html.ActionLink("Create Leave Plan","LeavePlan/Create","Employee")</li>
                        <li>@Html.ActionLink("Manage Leave Plans & Requests", "LeavePlan", "Employee")</li>
                    </ul>
                   </div>
            </div>

        </div>
    </div>
    @if (User.IsInRole("Admin"))
    {
        <div class="row">
            <div class="panel panel-default panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">
                        <a data-toggle="collapse" href="#collapse1">Compose Leave Plan Message</a>
                    </div>
                </div>
                <div id="collapse1" class="panel-collapse collapse">
                    <div class="panel-body">
                        <form method="post">
                            <div class="form-group">
                                <textarea id="editor1" name="MessageBody" class="ckeditor" value="@Model.MessageBody"></textarea>
                                <div style="margin-left:15px; margin-bottom:5px">
                                    <input type="submit" class="btn btn-success" value="Send Message" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">
                        <a data-toggle="collapse" href="#collapse2">Pending Leave Plan</a>
                    </div>
                </div>
                <div id="collapse2" class="panel-collapse collapse">
                    <div class="panel-body">
                        @Html.Action("_GetleavePlanList", "LeaveManagement")
                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">
                        <a data-toggle="collapse" href="#collapse3">Approved Leave Plan</a>
                    </div>
                </div>
                <div id="collapse3" class="panel-collapse collapse">
                    <div class="panel-body">
                        @Html.Action("_GetApprovedLeavePlanList", "LeaveManagement")
                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">
                        <a data-toggle="collapse" href="#collapse4">Rejected Leave Plan</a>
                    </div>
                </div>
                <div id="collapse4" class="panel-collapse collapse">
                    <div class="panel-body">
                        @Html.Action("_GetRejectedLeavePlanList", "LeaveManagement")
                    </div>
                </div>

            </div>
        </div>
    }
    
</section>

